{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OpenAI Chat Format",
  "description": "OpenAI chat completion format with messages array",
  "type": "object",
  "required": ["messages"],
  "properties": {
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["role", "content"],
        "properties": {
          "role": {
            "type": "string",
            "enum": ["system", "user", "assistant"]
          },
          "content": {
            "type": "string"
          }
        }
      }
    }
  }
}
